{
  "name": "ym-balance-app",
  "version": "1.0.0",
  "description": "Finance tracker app for YM using Express, MongoDB and Pug",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "watch:sass": "node-sass static/sass/main.scss static/css/style.css -w",
    "devserver": "live-server",
    "start-front": "npm-run-all --parallel devserver watch:sass",
    "build:js": "parcel build ./public/js/controller.js --out-dir ./public/js --out-file bundle.js"
  },
  "keywords": [],
  "author": "Hari",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cloudinary": "^1.41.3",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-session": "^1.18.1",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "mongodb": "^6.17.0",
    "mongoose": "^8.15.2",
    "multer": "^2.0.1",
    "multer-storage-cloudinary": "^4.0.0",
    "node-sass": "^9.0.0",
    "pug": "^3.0.3"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
